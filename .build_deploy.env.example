# Local project paths
ROOT_DIR="$(pwd)"
CLIENT_DIR="$ROOT_DIR/client"
CLIENT_DIST_DIR="$CLIENT_DIR/dist"
SERVER_DIR="$ROOT_DIR/server"
NGINX_CONFIG="$ROOT_DIR/nginx.conf"

# Remote server (VPS) settings
VPS_SSH_KEY_PATH="$HOME/.ssh/your-key"
VPS_SSH_PORT='22'
VPS_USER="your-username"
VPS_HOST="your-domain.com"
VPS_SSH="$VPS_USER@$VPS_HOST"

VPS_WORKTREE="/var/www/vestr_demo"
VPS_NGINX_CONFIG="/etc/nginx/sites-available/vestr"
VPS_NGINX_ENABLED="/etc/nginx/sites-enabled/vestr"

# Backend server port
BACKEND_PORT=5000

